<style>
  table {
      font-family: times, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
  }

</style>

<h1>All Cars</h1>

<% if current_user.admin %>

  <table>
    <thead>
      <tr>
        <th>Registered Owner</th>
        <%= render "index" %>
      </tr>
    </thead>

    <tbody id="registered_cars">

    </tbody>
  </table>

<% else %>

  <table>
    <thead>
      <tr>
        <%= render "index" %>
      </tr>
    </thead>

    <tbody id="user_cars">

    </tbody>
  </table>

<% end %>

<br />

<button id="sorted_cars">Sort Cars</button>
