<style>
  table {
      font-family: times, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
  }

</style>

<h1>All Cars</h1>

<% if current_user.admin %>
  
  <table>
    <thead>
      <tr>
        <th>Registered Owner</th>
        <th>Parking Space Number</th>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Year</th>
        <th>Car Color</th>
        <th>Car Size</th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.user.name %></td>
          <td><%= car.parking_space.space_number %></td>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.color %></td>
          <td><%= car.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <table>
    <thead>
      <tr>
        <th>Parking Space Number</th>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Year</th>
        <th>Car Color</th>
        <th>Car Size</th>
      </tr>
    </thead>

    <tbody>
      <% current_user.cars.each do |car| %>
        <tr>
          <td><%= car.parking_space.space_number %></td>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.color %></td>
          <td><%= car.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
