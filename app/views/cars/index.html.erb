<style>
  table {
      font-family: times, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
  }

</style>

<h1>All Cars</h1>

<table>
  <thead>
    <tr>
      <th>Car Make</th>
      <th>Car Model</th>
      <th>Car Year</th>
      <th>Car Color</th>
      <th>Car Size</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.color %></td>
        <td><%= car.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Car", new_car_path %>