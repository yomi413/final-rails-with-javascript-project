<h1>Edit Your Car</h1>

<%= form_tag car_path(@car), method: "patch" do %>
  <%= label_tag :make, "Make:" %>
  <%= text_field_tag :make, @car.make %><br></br>

  <%= label_tag :model, "Model:" %>
  <%= text_field_tag :model, @car.model %><br></br>

  <%= label_tag :year, "Year:" %>
  <%= number_field_tag :year, @car.year %><br></br>

  <%= label_tag :color, "Color:" %>
  <%= text_field_tag :color, @car.color %><br></br>

  <%= label_tag :size, "Size:" %>
  <%= text_field_tag :size, @car.size %><br></br>

    <%= fields_for :parking_space_attributes do |ps| %>

      <%= ps.label :space_number, "Parking Space Number:" %>
      <%= ps.select :space_number, options_for_select((100..125).step(1).to_a.map{|space| ["#{space}", space]}), include_blank: true %>

    <% end %>

  <%= submit_tag "Edit Car" %>
<% end %>