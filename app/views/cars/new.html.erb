<h1>Register Your Vehicle</h1>

  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@car.errors.count, "error") %>
      prohibited this car from being saved: </h2>

      <ul>
        <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_tag('/cars', method: "post") do %>
  <strong><%= label_tag :make, "Make:" %></strong>
  <%= text_field_tag :make, @car.make %><br></br>

  <strong><%= label_tag :model, "Model:" %></strong>
  <%= text_field_tag :model, @car.model %><br></br>

  <strong><%= label_tag :year, "Year:" %></strong>
  <%= number_field_tag :year, @car.year %><br></br>

  <strong><%= label_tag :color, "Color:" %></strong>
  <%= text_field_tag :color, @car.color %><br></br>

  <strong><%= label_tag :size, "Size:" %></strong>
  <%= text_field_tag :size, @car.size %><br></br>

  <%= submit_tag "Create Car" %>
<% end %>