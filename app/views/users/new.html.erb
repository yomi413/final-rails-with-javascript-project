<h1>New User</h1>

<%= form_for @user do |f| %>
  <%= f.label :name, "Full Name:" %>
  <%= f.text_field :name %>
  <br></br>

  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>
  <br></br>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <br></br>

  <%= f.submit %>
<% end %>

<% if flash.now %>
  <h4><%= flash.now[:error] %></h4>
<% end %>