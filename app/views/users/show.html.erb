<h1 id="user_name"></h1>
<% if @user.admin %>
  <h2>ADMIN</h2>
  <%= link_to "All Registered Cars", cars_path %>
<% else %>

  <% if current_user.cars.empty? %>
    <center><h4>No listings available</h4></center>
  <% else %>
    <p>Please click the link that you would like to edit or delete.</p>
  <% end %>

<div id="registered_cars">
  <p>Number of Registered Cars: <%= @user.cars.count %></p>

  <ul id="car_list">
    
  </ul>
</div>

<div id="registered_parking_spaces">
  <p>Number of Parking Spaces: <%= @user.parking_spaces.count %></p>

  <ul id="parking_space_list">
    
  </ul>
</div>

  <%= link_to "All Registered Cars", cars_path %> | <%= link_to "New Car", new_car_path(@user) %>

<% end %>